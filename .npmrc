# Define o gerenciador de pacotes
package-manager=pnpm@9.0.0

# Garante que todos os pacotes usem o mesmo lockfile
shared-workspace-lockfile=true

# Linka as dependências locais em vez de duplicar
link-workspace-packages=true

# Instala apenas o que está listado em package.json (evita surpresas)
strict-peer-dependencies=false

# Habilita cache eficiente
prefer-frozen-lockfile=false
