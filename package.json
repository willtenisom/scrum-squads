{
  "name": "scrum-squads-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:admin": "pnpm build --filter admin-dashboard",
    "build:backend": "pnpm build --filter backend-nestjs",
    "dev": "turbo run dev",
    "dev:admin": "pnpm dev --filter admin-dashboard",
    "dev:aluno": "pnpm dev --filter painel-aluno",
    "dev:backend": "pnpm dev --filter backend-nestjs",
    "start:admin": "pnpm start --filter admin-dashboard",
    "start:backend": "pnpm start --filter backend-nestjs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules && rm -rf .turbo"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
